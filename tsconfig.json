{
  "extends": "@wix/cli-app/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "src",
    "types": [
      "react"
    ],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}